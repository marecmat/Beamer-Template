\makeatletter
\setbeamertemplate{mini frames}{
    \begin{pgfpicture}{2pt}{0pt}{.1cm}{.1cm}
    \pgfpathrectangle{\pgfpointorigin}{\pgfpoint
            {\the\dimexpr0.6\beamer@boxsize\relax}
            {\the\dimexpr0.6\beamer@boxsize\relax}}
    \pgfusepath{fill,stroke}
    \end{pgfpicture}}
\setbeamertemplate{mini frame in current subsection}{
    \begin{pgfpicture}{2pt}{0pt}{.1cm}{.1cm}
    \pgfpathrectangle{\pgfpointorigin}{\pgfpoint
            {\the\dimexpr0.6\beamer@boxsize\relax}
            {\the\dimexpr0.6\beamer@boxsize\relax}}
    \pgfsetfillcolor{section in head/foot.bg}
    \pgfusepath{fill,stroke}
    \end{pgfpicture}}
