\mode<presentation>

%%%%%%%%%%%% fonts
\newfontfamily\aleo{Aleo}
\newfontfamily\gillsans{Gill Sans}
\newfontfamily\futura{Futura}

\setbeamerfont{structure}{family=\futura}

\setbeamerfont{title}{size=\huge,series=\aleo,parent=structure}
\setbeamerfont{subtitle}{size=\normalsize,series=\aleo,parent=title}

\setbeamerfont{date}{size=\scriptsize,series=\mdseries,parent=structure}
\setbeamerfont{author}{size=\normalsize,parent=title}
\setbeamerfont{institute}{size=\scriptsize,series=\mdseries,parent=structure}

\setbeamerfont{section in toc}{size=\Large,series=\aleo,parent=structure}
\setbeamerfont{section in head/foot}{series=\aleo,size=\tiny,parent=structure}
\setbeamerfont{subsection in toc}{series=\aleo,size=\small,series=\mdseries,parent={section in toc}}

\setbeamerfont{frametitle}{size=\LARGE,series=\aleo,parent=structure}
\setbeamerfont{framesubtitle}{parent=frametitle,size=\Large}

\setbeamerfont{caption}{size=\footnotesize}
\setbeamerfont{item}{parent=structure,series=\mdseries}
\setbeamerfont{block title}{size=\large,series=\mdseries,parent={structure,block body}}

\mode
<all>